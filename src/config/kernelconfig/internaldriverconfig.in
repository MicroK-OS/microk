
# Internal drivers

mainmenu_option next_comment
	comment 'Internal Kernel Drivers'

	bool 'Enable PRINTK subsystem' CONFIG_PRINTK y
	if [ "$CONFIG_PRINTK" = "y" ]; then
		comment 'Printk devices.'

		if [ "$CONFIG_FM_UEFI" = "y" ]; then
			bool 'Enable the UEFI GOP.'                CONFIG_HW_GOP y
		elif [ "$CONFIG_FM_BIOS" = "y" ]; then
			comment 'Not available'
		fi

		bool 'Enable the serial port'                     CONFIG_HW_SERIAL y
	fi
endmenu
